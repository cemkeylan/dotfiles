#!/bin/bash

if [ -d $HOME/.local/share/mail ]
then
	[ -z "$(echo -e "$(echo "$(du -a ~/.local/share/mail/*/INBOX/new/* 2>/dev/null | sed -n '$=')$(cat /tmp/imapsyncicon_$USER 2>/dev/null)") ")" ] && echo " 0" && exit

	echo -e " $(echo "$(du -a ~/.local/share/mail/*/INBOX/new/* 2>/dev/null | sed -n '$=')$(cat /tmp/imapsyncicon_$USER 2>/dev/null)"
	) "
else
	Mailbox cannot be found
fi
