#
# simple x hotkey daemon configuration
#

# Common

mod1 + Return
	$TERMINAL
mod1 + shift + m
	$TERMINAL -t Mail -e neomutt
mod1 + m
	$TERMINAL -t Music -e ncmpcpp
mod1 + n
	$TERMINAL -e $FILE
mod1 + shift + n
	$TERMINAL -e newsboat
mod1 + o
	$BROWSER
mod1 + d
	rofi -show drun
mod1 + ctrl + e
	$TERMINAL -e $EDITOR
super + v
	$TERMINAL -e nvim -c VimwikiIndex
super + shift + v
	$TERMINAL -e nvim -c VimwikiUISelect
mod1 + p
	passmenu
super + o
	dsh
mod1 + c
	$TERMINAL -e calcurse
super + shift + m
	$TERMINAL -e pulsemixer
super + shift + c
	mpv --no-osc --no-input-default-bindings --input-conf=/dev/null --title='mpvfloat' /dev/video0
mod1 + ctrl + k
	killall screenkey || screenkey


# Nightmode commands

super + e
	nightmodetoggle click
super + shift + e
	nightmodetoggle disable
super + shift + w
	nightmodetoggle cron
mod1 + x
	dmenuresources


# Multimedia Keys

XF86MonBrightness{Up,Down}
	xbacklight {-inc,-dec} 10
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume 0 {+,-}5%
XF86AudioMute
	pactl set-sink-mute 0 toggle
XF86Audio{Next,Prev}
	mpc {next,prev}
XF86AudioPlay
	mpctoggle


# Power Keys

super + shift + n
	ask "sudo -A shutdown -h now" "Are you sure you want to shutdown?"
super + shift + r
	ask "sudo -A shutdown -r now" "Are you sure you want to reboot?"
super + shift + s
	$HOME/.local/bin/suspendsys


# Other

super + F1
	readthedocs
